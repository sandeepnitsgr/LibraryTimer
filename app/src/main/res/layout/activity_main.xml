<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.ui.MainActivity">

    <ViewFlipper
        android:id="@+id/viewFlipper"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/detailsLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="24dp">

            <TextView
                android:id="@+id/idTag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Location Id"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/locationIdValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="@id/idTag"
                app:layout_constraintTop_toBottomOf="@id/idTag"
                tools:text="some id" />

            <TextView
                android:id="@+id/priceTag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="Price Per Minute"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@id/locationIdValue"
                app:layout_constraintTop_toBottomOf="@id/locationIdValue" />

            <TextView
                android:id="@+id/priceValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="@id/priceTag"
                app:layout_constraintTop_toBottomOf="@id/priceTag"
                tools:text="Some Price" />

            <TextView
                android:id="@+id/startTimeTag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="Start Time"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@id/priceValue"
                app:layout_constraintTop_toBottomOf="@id/priceValue" />

            <TextView
                android:id="@+id/startTimeValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="@id/startTimeTag"
                app:layout_constraintTop_toBottomOf="@id/startTimeTag"
                tools:text="Some time" />

            <TextView
                android:id="@+id/locationDetailTag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="Location"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@id/startTimeValue"
                app:layout_constraintTop_toBottomOf="@id/startTimeValue" />

            <TextView
                android:id="@+id/locationDetailValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="3"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@id/locationDetailTag"
                app:layout_constraintTop_toBottomOf="@id/locationDetailTag"
                tools:text="Some location address" />

            <TextView
                android:id="@+id/timerTag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="Time Spent"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@id/locationDetailTag"
                app:layout_constraintTop_toBottomOf="@id/locationDetailValue" />

            <TextView
                android:id="@+id/timerTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="00:00:00"
                android:textSize="24sp"
                app:layout_constraintStart_toStartOf="@id/timerTag"
                app:layout_constraintTop_toBottomOf="@id/timerTag" />

            <TextView
                android:id="@+id/endTimeTag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="Total Time Spent"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@id/timerTv"
                app:layout_constraintTop_toBottomOf="@id/timerTv" />

            <TextView
                android:id="@+id/endTimeValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="@id/endTimeTag"
                app:layout_constraintTop_toBottomOf="@id/endTimeTag"
                tools:text="total time spent" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </ViewFlipper>

    <Button
        android:id="@+id/btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:text="Scan Now"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>